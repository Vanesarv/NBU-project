@using NBU.Forum.Contracts.Requests;
@model CreateCommentRequest

<!-- Add comment form -->
<div class="add-comment">
    <h4>Add a Comment</h4>
    <form asp-controller="Comment" asp-action="Create" method="post">
        <input type="hidden" asp-for="ArticleId" value="@Model.ArticleId" />
        <div class="form-group">
            <label asp-for="Content">Comment</label>
            <textarea class="form-control" asp-for="Content" rows="3" placeholder="Enter your comment"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
